<?xml version="1.0" encoding="UTF-8"?>
<addon id="chobe" version="0.0.1" name="chobe" provider-name="giacomofeltrin">
  <requires>
    <import addon="xbmc.python" version="3.0.1" />
    <import addon="script.module.beautifulsoup4" version="4.9.3" />
  </requires>
  <extension point="xbmc.python.pluginsource" library="main.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.repository" name="kodi20">
    <dir>
      <info compressed="false">https://raw.githubusercontent.com/giacomofeltrin/chobe/main/kodi20/zips/addons.xml</info>
      <checksum>https://raw.githubusercontent.com/giacomofeltrin/chobe/main/kodi20/zips/addons.xml.md5</checksum>
      <datadir zip="true">https://raw.githubusercontent.com/giacomofeltrin/chobe/main/kodi20/zips/</datadir>
    </dir>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en_GB">Chobe Video Plugin</summary>
    <description lang="en_GB">A video plugin for Kodi mediacenter.</description>
    <disclaimer lang="en_GB">All sources videos are provided by their respective websites.</disclaimer>
    <license>GPL-3.0-only</license>
    <assets>
      <icon>resources/images/icon.png</icon>
      <fanart>resources/images/fanart.jpg</fanart>
      <screenshot>resources/images/screenshot-1.jpg</screenshot>
      <screenshot>resources/images/screenshot-2.jpg</screenshot>
    </assets>
    <news>News placeholder</news>
  </extension>
</addon>